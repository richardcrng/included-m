{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es6", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "server"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
